<div class="row">
  <div class="col-md-12">
    <div class="card mb-4 mt-4 shadow-sm">
      <h5 class="card-header"><%= job.title %></h5>
      <div class="card-body">
        <p class="card-text"><%= job.description %></p>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <%= link_to "Show", job, class: "btn btn-sm btn-outline-secondary" %>
            <% if job.user == current_user %>
              <%= link_to "Edit", edit_job_path(job), class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to "Destroy", job, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
            <% elsif user_signed_in? && !current_user.applied_to?(job) %>
              <%= link_to "Apply", apply_job_path(job), method: :post, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-primary" %>
            <% end %>
          </div>
          <small class="text-muted"><strong><%= job.category.name %></strong> by <%= job.user.email %></small>
        </div>
      </div>
    </div>
  </div>
</div>
